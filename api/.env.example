BREVO_API_KEY=your-brevo-api-key
SMTP_FROM=your-verified-sender@example.com

# Option 2: SMTP (may be blocked on some platforms)
# MAIL_MODE=smtp
# SMTP_HOST=smtp-relay.brevo.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_REQUIRE_TLS=true
# SMTP_USER=your-email@example.com
# SMTP_PASS=your-smtp-key
# SMTP_FROM=your-verified-sender@example.com

# Option 3: File mode (local testing - saves emails as .eml files)
# MAIL_MODE=file

# Optional email settings
# SNAPSHOT_CC=cc1@example.com,cc2@example.com
