PORT=8080
API_KEY=CHANGE_ME
DATABASE_URL=postgres://user:pass@host/db?sslmode=require
HARD_LOCK=0
ALLOWED_DOMAIN=
SIGNUP_CLOSED=0

# Email Configuration - Choose ONE method:

